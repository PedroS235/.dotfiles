font-size = 14
theme = tokyonight
background-opacity = 0.8
window-decoration = false
copy-on-select = true
confirm-close-surface = false

# Workaround for slow start up times
gtk-single-instance = true
#quit-after-last-window-closed = false

#copy-on-select = clipboard

# Keybinds

# Tabs
keybind = ctrl+a>c=new_tab
keybind = ctrl+a>n=next_tab
keybind = ctrl+a>p=previous_tab

# Splits
keybind = ctrl+a>z=toggle_split_zoom
keybind = ctrl+a>-=new_split:down
keybind = ctrl+a>/=new_split:right

keybind = ctrl+a>j=goto_split:bottom
keybind = ctrl+a>k=goto_split:top
keybind = ctrl+a>h=goto_split:previous
keybind = ctrl+a>l=goto_split:next

keybind = alt+shift+up=resize_split:up,10
keybind = alt+shift+down=resize_split:down,10
keybind = alt+shift+left=resize_split:left,10
keybind = alt+shift+right=resize_split:right,10


keybind = ctrl+a>w=close_surface
