        },
        "all-outputs": true,
        "on-click": "activate"
    },
    "hyprland/window": {
        "format": "{title}",
        "rewrite": {
            "(.*) ‚Äî Mozilla Firefox": "$1"
        }
    },
    "modules-center": [
        "idle_inhibitor",
        "clock",
