{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            // "1": "ÔÑ† ",
            // "2": "Ôâ© ",
            // "9": "ÔÜº ",
            // "0": "ÔÅµ ",
            "active": "ÔÜí ",
