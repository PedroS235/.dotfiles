        "interval": 30,
        "exec": "~/.config/waybar/scripts/waybar-wttr-c.py",
        "return-type": "json"
    },
    "modules-right": [
        "tray",
        "battery",
        "load",
        "memory",
        "backlight",
        "pulseaudio",
        "pulseaudio#microphone",
        "custom/power_btn"
    ],
    "tray": {
        "icon-size": 20,
        "spacing": 5
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
